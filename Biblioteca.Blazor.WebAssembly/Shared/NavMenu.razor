@using Biblioteca.API.Clients
@inject IAuthService Auth
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex align-items-center">
        <a class="navbar-brand" href="/">Biblioteca</a>
        <button title="Navegación" class="navbar-toggler ms-auto" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            @if (isAuth)
            {
                <NavLink class="nav-link" href="cambiar-contrasena">
                    <span class="fas fa-key" aria-hidden="true"></span> Cambiar contraseña
                </NavLink>
                <a href="#" class="nav-link" @onclick="OnLogout">
                    <span class="fas fa-sign-out-alt" aria-hidden="true"></span> Salir (@username)
                </a>
            }
            else
            {
                <NavLink class="nav-link" href="login">
                    <span class="fas fa-sign-in-alt" aria-hidden="true"></span> Ingresar
                </NavLink>
            }
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fas fa-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <div class="nav-link disabled text-white-50">
                <strong>Catálogo</strong>
            </div>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="libros">
                <span class="fas fa-book" aria-hidden="true"></span> Libros
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="autores">
                <span class="fas fa-user-edit" aria-hidden="true"></span> Autores
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="generos">
                <span class="fas fa-tags" aria-hidden="true"></span> Géneros
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="editoriales">
                <span class="fas fa-building" aria-hidden="true"></span> Editoriales
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <div class="nav-link disabled text-white-50 mt-3">
                <strong>Gestión</strong>
            </div>
        </div>
        
        @if (canUsuarios)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="usuarios">
                    <span class="fas fa-users" aria-hidden="true"></span> Usuarios
                </NavLink>
            </div>
        }
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="prestamos">
                <span class="fas fa-handshake" aria-hidden="true"></span> Préstamos
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool isAuth = false;
    private string username = string.Empty;
    private bool canUsuarios = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        await RefreshAuthStateAsync();
        Auth.AuthenticationStateChanged += async () => await RefreshAuthStateAsync();
    }

    private async Task RefreshAuthStateAsync()
    {
        isAuth = await Auth.IsAuthenticatedAsync();
        username = (await Auth.GetUsernameAsync()) ?? string.Empty;
        canUsuarios = await Auth.HasPermissionAsync("usuarios.leer");
        StateHasChanged();
    }

    private async Task OnLogout()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/");
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
